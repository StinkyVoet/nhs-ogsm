                        </Button>
                        @if (currentGoal.ID != 0 && !currentGoal.Strategies.Contains(strategy))
                        {
                            <Button Size="Size.Small" @onclick="@(() => AddStratToGoal(strategy, currentGoal))" Color="ButtonColor.Primary">
                                <span class="material-symbols-outlined">link</span>
                            </Button>
