@page "/DashBoard/{OgsmId:int}"
@page "/DashBoard"
@using nhs_ogsm.Data
@using nhs_ogsm.Services
@inject OgsmItemService OgsmItemService;
@inject GoalService GoalService;

@code{
    [Parameter]
    public int OgsmId { get; set; }
    public OgsmItems Ogsm { get; set; }
    public List<Goal> _GoalsList { get; set; }
    public Goal currentGoal { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        Ogsm = OgsmItemService.GetOgsm(OgsmId);
        _GoalsList = GoalService.GetGoals(Ogsm);
    }
}

<!DOCTYPE html>

<html>
<head>
    <title>OGSM: @Ogsm.Title</title>
</head>
<body>

<div>
    <EditForm Model="@currentGoal" OnValidSubmit="HandleSubmit">
        <label for="NameInput">Name:</label>
        <InputText id="NameInput" @bind-Value="@currentGoal.Name"></InputText>
        <button type="submit" class="btn-primary">Save</button>
    </EditForm>
</div>

@code
{
    public void HandleSubmit(EditContext editContext)
    {
        var newGoal = (Goal)editContext.Model;
        GoalService.AddGoal(newGoal);
        _GoalsList = GoalService.GetGoals(Ogsm);
        currentGoal = new Goal();
        StateHasChanged();
    }
}

<div>
    <h1>Goals for @OgsmId - @Ogsm.Title</h1>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var goal in _GoalsList)
        {
            <tr>
                <td>@goal.ID</td>
                <td>@goal.Name</td>
                <td><input type="button" value="Delete" onclick="@(() => HandleDelete(goal))" class="btn btn-default"/></td>
            </tr>
        }
        </tbody>
    </table>
</div>

@code
{
    public void HandleDelete(Goal goal)
    {
        GoalService.DeleteGoal(goal.ID);
        StateHasChanged();
    }
}
</body>
</html>